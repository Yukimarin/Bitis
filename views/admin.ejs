    <!--<title> Responsiive Admin Dashboard | CodingLab </title>-->
    <link rel="stylesheet" href="/css/admin.css" />
    <!-- Boxicons CDN Link -->
    <link
      href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="sidebar">
      <div class="logo-details">
        <span class="logo_name">OrderFood</span>
      </div>
      <ul class="nav-links">
        <li>
          <a href="#" class="active">
            <i class="bx bx-grid-alt"></i>
            <span class="links_name dashboard">Dashboard</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class="bx bx-box"></i>
            <span class="links_name" id="btn-rtr">Restaurant</span>
          </a>
        </li>
       
        <li class="log_out" >
          <a id="btn-logout">
            <i class="bx bx-log-out"></i>
            <span class="links_name" >Log out</span>
          </a>
        </li>
      </ul>
    </div>
    <section class="home-section">
      <nav class="sub-heading">
        <div class="sidebar-button">
          <i class="bx bx-menu sidebarBtn"></i>
          <span class="dashboard">Dashboard</span>
        </div>
        <div class="search-box">
          <input type="text" placeholder="Search..." />
          <i class="bx bx-search"></i>
        </div>
        <div class="profile-details">
          <!--<img src="images/profile.jpg" alt="">-->
          <span class="admin_name">Prem Shahi</span>
          <i class="bx bx-chevron-down"></i>
        </div>
      </nav>
      <!-- Bảng quản lý user -->
      <div class="container ">
        <div class="row user-management">
            <div class="col-md-12">
                <legend>User Management</legend>
            </div>
        </div>
        
            <div class="row ">
            <div class="col-md-12">
      <table class="table table-responsive table-hover table-bordered ">
        <thead>
          <tr class="info">
            <th>Username</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Password</th>
            <th>Address</th>
            <th>Wallet</th>
            <th>Img</th>
            <th>Role</th>  
            <th>Status</th>  
            <th>Action</th>  
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < userList.length; i++) {%>
          
            <tr class="status-edit <%= users[i]._id.toString() %> ">
              <td><%= userList[i].username %></td>
              <td><%= userList[i].phone %></td>
              <td><%= userList[i].email %></td>
              <td><%= userList[i].password %></td>
              <td><%= userList[i].address %></td>
              <td><%= userList[i].wallet %></td>
              <td><%= userList[i].image %></td>
              <td><%= userList[i].role %></td>
              <td><%= userList[i].status %></td>
              <td class="action">
                <span
                  class="btn-delete-blogs btn btn-danger"
                >
                  <ion-icon name="trash-outline"></ion-icon>
                </span>
                <span
                          class="btn-update-blogs btn btn-info"
                >
                  <ion-icon name="build-outline"></ion-icon>
                </span>
              </td>
            </tr>
          <% } %> 
            
        </tbody>
      </table>
            </div>
        </div>

        <!-- Bảng quản lý của restaurant-->
      <div class="container ">
        <div class="row user-management">
            <div class="col-md-12">
                <legend>Restaurant Management</legend>
            </div>
        </div>
        
            <div class="row ">
            <div class="col-md-12">
                <table class="table table-responsive table-hover table-bordered ">
        <thead>
          <tr class="info">
            <th>Username</th>
            <th>Name restaurant</th>
            <th>Open Time</th>
            <th>Close Time</th>
            <th>Address</th>
            <th>Category</th>
            <th>Img</th>
            <th>Name Product</th>
            <th>Price Product</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < restaurantList.length; i++) {%>
          
            <tr>
              <td><%= restaurantList[i].username %></td>
              <td><%= restaurantList[i].phone %></td>
              <td><%= restaurantList[i].email %></td>
              <td><%= restaurantList[i].password %></td>
              <td><%= restaurantList[i].address %></td>
              <td><%= restaurantList[i].wallet %></td>
              <td><%= restaurantList[i].image %></td>
              <td><%= restaurantList[i].role %></td>
              <td><%= restaurantList[i].status %></td>
              <td class="action">
                <span
                  class="btn-delete-blogs btn btn-danger"
                >
                  <ion-icon name="trash-outline"></ion-icon>
                </span>
                <span
                          class="btn-update-blogs btn btn-info"
                >
                  <ion-icon name="build-outline"></ion-icon>
                </span>
              </td>
            </tr>
          <% } %> 
        </tbody>
      </table>
            </div>
        </div>
    </div>
    <!-- Bảng menu -->
    <div class="container ">
      <div class="row user-management">
          <div class="col-md-12">
              <legend>Foods List</legend>
          </div>
      </div>
      
          <div class="row ">
          <div class="col-md-12">
    <table class="table table-responsive table-hover table-bordered ">
      <thead>
        <tr class="info">
          <th>Phone</th>
          <th>Name restaurant</th>
          <th>Category</th>
          <th>Food Name</th>
          <th>Opinion</th>
          <th>Price</th>
          <th>Img</th>  
          <th>Address</th>  
          <th>Action</th>  
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < foodList.length; i++) {%>
          
          <tr>
            <td><%= foodList[i].phone %></td>
            <td><%= foodList[i].nameRestaurant %></td>
            <td><%= foodList[i].password %></td>
            <td><%= foodList[i].category %></td>
            <td><%= foodList[i].foodname %></td>
            <td><%= foodList[i].opinion %></td>
            <td><%= foodList[i].price %></td>
            <td><%= foodList[i].img %></td>
            <td><%= foodList[i].address %></td>
            <td class="action">
              <span
                class="btn-delete-blogs btn btn-danger"
              >
                <ion-icon name="trash-outline"></ion-icon>
              </span>
              <span
                        class="btn-update-blogs btn btn-info"
              >
                <ion-icon name="build-outline"></ion-icon>
              </span>
            </td>
          </tr>
        <% } %> 
      </tbody>
    </table>
          </div>
      </div>
       
    
    </section>
    <script
    type="module"
    src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
  ></script>
